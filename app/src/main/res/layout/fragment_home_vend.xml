<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_marginHorizontal="10dp"
android:orientation="vertical">
<TextView
    android:layout_marginTop="20dp"
    android:id="@+id/vendor_home_label"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="Home"
    android:textColor="@color/colorPrimary"
    android:textSize="30sp"
    android:textStyle="bold|italic" />

<LinearLayout
    android:id="@+id/vend_linlayout_pend_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20sp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/pending_order_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_weight="1"
        android:text="Pending new order:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/pending_order"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="30"
        android:textSize="18sp" />


</LinearLayout>

<LinearLayout
    android:id="@+id/vend_linlayout_del_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20sp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/delivered_order_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_weight="1"
        android:text="Total delivered order"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/delivered_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="30"
        android:textSize="18sp" />
</LinearLayout>
    <LinearLayout
        android:id="@+id/vend_linlayout_value_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/value_order_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:text="Value of order delivered:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/value_order"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="30"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/vend_linlayout_t_del_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t_delivered_order_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:text="Total delivered order in 30 days:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/total_delivered_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="30"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vend_linlayout_total_value_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/total_value_order_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:text="Value of order delivered in 30Days :"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/total_value_order"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="30"
            android:textSize="18sp" />


    </LinearLayout>



</LinearLayout>





