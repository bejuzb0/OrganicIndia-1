<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".vendor.ProductFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="#00FFFFFF"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Product"
            android:textColor="#009688"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!--        for heading-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/p_product_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="Product Name"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/p_product_quantity"
                    android:layout_width="wrap_content"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/p_product_name"
                    android:layout_toRightOf="@+id/p_product_name"
                    android:text="Qty"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/p_product_amount"

                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"

                    android:layout_toEndOf="@+id/p_product_quantity"
                    android:layout_toRightOf="@+id/p_product_quantity"
                    android:gravity="end"
                    android:text="Rate"
                    android:textStyle="bold"></TextView>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="MILK"></TextView>

                <TextView
                    android:id="@+id/product_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/product_name"
                    android:layout_toRightOf="@+id/product_name"
                    android:text="3Lit"></TextView>

                <TextView
                    android:id="@+id/product_amount"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/product_quantity"
                    android:layout_toRightOf="@+id/product_quantity"
                    android:gravity="end"
                    android:text="35/Lit"></TextView>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/product_name1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="CURD"></TextView>

                <TextView
                    android:id="@+id/product_quantity1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/product_name1"
                    android:layout_toRightOf="@+id/product_name1"
                    android:text="1Lit"></TextView>

                <TextView
                    android:id="@+id/product_amount1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/product_quantity1"
                    android:layout_toRightOf="@+id/product_quantity1"
                    android:gravity="end"
                    android:text="45/Lit"></TextView>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/product_name3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="Paneer"></TextView>

                <TextView
                    android:id="@+id/product_quantity3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/product_name3"
                    android:layout_toRightOf="@+id/product_name3"
                    android:text="2Kg"></TextView>

                <TextView
                    android:id="@+id/product_amount3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/product_quantity3"
                    android:layout_toRightOf="@+id/product_quantity3"
                    android:gravity="end"
                    android:text="45/kg"></TextView>


            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#D4D4D4"
            android:text="product Fragment"
            android:textSize="30sp" />
    </LinearLayout>
</LinearLayout >