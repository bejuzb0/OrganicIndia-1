<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/customer_profile_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Profile"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:id="@+id/vend_linlayout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/profile_vend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:text="Name"
            android:textSize="18sp"
            style="@style/light"/>

        <TextView
            android:id="@+id/profile_vend_actual_name"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Random_name"
            style="@style/light"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/vend_linlayout_mobile_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/profile_vend_mobile_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            style="@style/light"
            android:text="Mobile No"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/profile_vend_actual_mobile_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mobile Number"
            android:textSize="18sp"

            style="@style/light"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/vend_linlayout_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/profile_vend_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:text="Delivery Area"
            android:textSize="18sp"

            style="@style/light"/>

        <TextView
            android:id="@+id/profile_vend_actual_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Add delivery areas"
            android:textSize="18sp"
            style="@style/light"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textdelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click to Add more location to deliver:-"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        style="@style/light"
        android:textSize="18dp"/>

    <LinearLayout
        android:id="@+id/add_address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:id="@+id/addresstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="15dp"
        android:drawablePadding="10dp"
        android:padding="12dp"
        android:text="Add Delivery Area"
        android:textColor="#009688"
        android:textSize="18dp"
        android:visibility="invisible"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:entries="@array/city_arrays"
        android:outlineAmbientShadowColor="#2196F3"
        android:outlineSpotShadowColor="#009688"
        android:prompt="@string/city_prompt"

        android:visibility="invisible"

        android:background="#DFC0C0"
        />
        <Button
            android:id="@+id/add_vend_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Add Area"
            android:textColor="@android:color/white"
            android:visibility="invisible"/>
    </LinearLayout>



    <Button
        android:id="@+id/save_button_vend_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="50dp"
        android:background="@color/colorPrimary"
        android:text="Save"
        android:visibility="gone"
        android:textColor="@android:color/white" />




</LinearLayout>




